@page
@model RegisterModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Adele_Health_App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Adele_Health_App.styles.css" asp-append-version="true" />
    <style>
        html, body {
            margin: 0;
            padding: 0;
            width: 1920px;
            height: 1080px;
            overflow: hidden;
            font-family: 'SF Pro', sans-serif;
        }

        .login-container {
            display: flex;
            width: 1920px;
            height: 1080px;
        }

        .left-panel {
            width: 840px;
            padding: 150px;
            background-color: #f9f9f9;
            overflow-y: auto;
        }

        .right-panel {
            width: 1080px;
            height: 90%;
            background-color: #f9f9f9;
        }

            .right-panel img {
                width: 100%;
                height: 95%;
                object-fit: fill;
            }

        .form-floating input {
            background-color: #eaf1ff;
        }

        .btn-primary {
            background-color: #033959;
            border-color: #033959;
        }

        .text-center span {
            font-weight: 500;
            color: #666;
        }

        .logo-img {
            width: 240px;
            height: auto;
            margin-top: -200px;
            margin-left: -100px;
            margin-bottom: 30px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="left-panel">
            <img src="@Url.Content("~/images/adelecorner.png")" alt="Logo" class="logo-img" />
            <section>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div style="margin-bottom: 12px;">
                        <div style="font-size: 24px; font-weight: 590;">Sign up</div>
                    </div>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"
                               placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="Input.FirstName" class="form-control" />
                                <label asp-for="Input.FirstName">First Name</label>
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="Input.LastName" class="form-control" />
                                <label asp-for="Input.LastName">Last Name</label>
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true"
                               placeholder="password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password"
                               aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Join AdeleAI</button>
                </form>
                <div class="mt-3">
                    <p><a id="resend-confirmation" asp-page="./Login">Go back to Login</a></p>
                </div>
                <div class="my-4 text-center">
                    <span>OR</span>
                </div>
                <div>
                    <hr />
                    @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <p>
                            No external authentication services are configured. See this
                            <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article</a>.
                        </p>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div class="d-grid gap-2">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-outline-primary" name="provider" value="@provider.Name">
                                        Continue with @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                    }
                </div>
            </section>
        </div>
        <div class="right-panel">
            <img src="~/images/coverimage.png" alt="Cover Image" />
        </div>
    </div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
